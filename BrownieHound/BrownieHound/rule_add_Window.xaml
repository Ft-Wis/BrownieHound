<Window x:Class="BrownieHound.rule_add_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrownieHound"
        mc:Ignorable="d"
        Title="rule_add_Window" Height="450" Width="409">
    <DockPanel Margin="1,1,1,1">
        <StackPanel DockPanel.Dock="Bottom" 
                    Orientation="Horizontal" HorizontalAlignment="Right">
        </StackPanel>
        <Grid>
        <Label x:Name="title" Content="ルール追加画面" HorizontalAlignment="Left" Height="44" Margin="19,10,0,0" VerticalAlignment="Top" Width="238" FontSize="24"/>
        <Button x:Name="add" Content="追加"  HorizontalAlignment="Left" Height="43" Margin="209,0,0,29" VerticalAlignment="Bottom" Width="168" FontWeight="Bold" FontFamily="Yu Gothic" FontSize="25"  Foreground="White" Click="addButton_Click" IsDefault="True" Cursor="Hand"/>
        <Button x:Name="cancel" Content="キャンセル" HorizontalAlignment="Left" Height="43" Margin="13,0,0,29" VerticalAlignment="Bottom" Width="168"  FontWeight="Bold" FontFamily="Yu Gothic" FontSize="25" Background="White" Foreground="Orange" BorderBrush="Black" Click="cancelButton_Click" IsCancel="True"/>

    </Grid>
    </DockPanel>
</Window> 
