<Window x:Class="BrownieHound.rule_add_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:BrownieHound"
        mc:Ignorable="d"
        Title="rule_add_Window" Height="450" Width="409">
    <Grid Margin="0,0,0,-36">
        <Label x:Name="title" Content="ルール追加画面" HorizontalAlignment="Center" Height="44" VerticalAlignment="Top" Width="159" FontSize="24" Margin="0,-3,0,0"/>
        <Button x:Name="add" Content="追加"  HorizontalAlignment="Left" Height="43" Margin="214,0,0,48" VerticalAlignment="Bottom" Width="168" FontWeight="Bold" FontFamily="Yu Gothic" FontSize="25"  Foreground="White" Click="addButton_Click" IsDefault="True"/>
        <Button x:Name="cancel" Content="キャンセル" HorizontalAlignment="Left" Height="43" Margin="12,0,0,48" VerticalAlignment="Bottom" Width="168"  FontWeight="Bold" FontFamily="Yu Gothic" FontSize="25" Background="White" Foreground="Orange" BorderBrush="Black" Click="cancelButton_Click" IsCancel="True"/>

        <Border BorderBrush="#FFFF731D" BorderThickness="2" HorizontalAlignment="Center" Height="312" CornerRadius="10"   Margin="0,38,0,0" VerticalAlignment="Top" Width="379">

        </Border>
        <TextBox x:Name="protocolTextBox" HorizontalAlignment="Left" Height="24" Margin="253,139,0,0" TextWrapping="Wrap" materialDesign:HintAssist.Hint="プロトコル名" IsEnabled="False" VerticalAlignment="Top"  Width="75"/>

        <TextBlock HorizontalAlignment="Left" Margin="27,69,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"><Run Language="ja-jp" Text="送信元メールアドレス"/></TextBlock>
        <ComboBox x:Name="sourceComboBox"  HorizontalAlignment="Left" Margin="144,59,0,0" materialDesign:HintAssist.Hint="" VerticalAlignment="Top" Width="105" SelectionChanged="sourceComboBox_SelectionChanged">
            <ComboBox.Resources>
                <Style TargetType="{x:Type materialDesign:SmartHint}">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                </Style>
            </ComboBox.Resources>
            <ComboBoxItem Content="すべて" />
            <ComboBoxItem Content="このPCのアドレス" />
            <ComboBoxItem Content="手動で設定" />
        </ComboBox>
        <TextBox x:Name="sourceTextBox"  HorizontalAlignment="Left" Margin="262,57,0,0" TextWrapping="Wrap" materialDesign:HintAssist.Hint="XXX.XXX.AAA.BBB" VerticalAlignment="Top" FontSize="13" Width="120" IsEnabled="False"/>
        <TextBlock x:Name="distinationTextBlock" HorizontalAlignment="Left" Margin="27,101,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"><Run Language="ja-jp" Text="送信元メールアドレス"/></TextBlock>
        <ComboBox x:Name="distinationComboBox"  HorizontalAlignment="Left" Margin="144,91,0,0" materialDesign:HintAssist.Hint="" VerticalAlignment="Top" Width="105" SelectionChanged="distinationComboBox_SelectionChanged">
            <ComboBox.Resources>
                <Style TargetType="{x:Type materialDesign:SmartHint}">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                </Style>
            </ComboBox.Resources>
            <ComboBoxItem Content="すべて" />
            <ComboBoxItem Content="このPCのアドレス" />
            <ComboBoxItem Content="手動で設定" />
        </ComboBox>

        <TextBox x:Name="distinationTextBox"  HorizontalAlignment="Left" Margin="262,89,0,0" TextWrapping="Wrap" materialDesign:HintAssist.Hint="XXX.XXX.AAA.BBB" VerticalAlignment="Top" FontSize="13" Width="120" IsEnabled="False"/>
        <TextBlock HorizontalAlignment="Left" Height="16" Margin="32,147,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="52"><Run Language="ja-jp" Text="プロトコル"/></TextBlock>

        <TextBlock HorizontalAlignment="Left" Height="16" Margin="30,194,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="67"><Run Language="ja-jp" Text="ポート番号"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Height="16" Margin="32,243,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="67"><Run Language="ja-jp" Text="サイズ"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Height="16" Margin="32,288,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="67"><Run Language="ja-jp" Text="間隔"/></TextBlock>
        <ComboBox x:Name="protocolComboBox"  HorizontalAlignment="Left" Margin="110,138,0,0" materialDesign:HintAssist.Hint="" VerticalAlignment="Top" Width="105" SelectionChanged="protocolComboBox_SelectionChanged">
            <ComboBox.Resources>
                <Style TargetType="{x:Type materialDesign:SmartHint}">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                </Style>
            </ComboBox.Resources>
            <ComboBoxItem Content="すべてのプロトコル" />
            <ComboBoxItem Content="TCP" />
            <ComboBoxItem Content="UDP" />
            <ComboBoxItem Content="手動で設定" />
        </ComboBox>
        <ComboBox x:Name="portnumberComboBox"  HorizontalAlignment="Left" Margin="111,184,0,0" materialDesign:HintAssist.Hint="" VerticalAlignment="Top" Width="105" TextBoxBase.TextChanged="portnumberComboBox_TextChanged"  SelectionChanged="portnumberComboBox_SelectionChanged">
            <ComboBox.Resources>
                <Style TargetType="{x:Type materialDesign:SmartHint}">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                </Style>
            </ComboBox.Resources>
            <ComboBoxItem Content="すべて" />
            <ComboBoxItem Content="HTTP(80)" />
            <ComboBoxItem Content="HTTPS(443)" />
            <ComboBoxItem Content="SNMP(162)" />
            <ComboBoxItem Content="DNS(53)" />
            <ComboBoxItem Content="手動で設定" />
        </ComboBox>
        <TextBox x:Name="portnumberTextBox" HorizontalAlignment="Left" Height="24" Margin="254,185,0,0" TextWrapping="Wrap" materialDesign:HintAssist.Hint="ポート番号" VerticalAlignment="Top" Width="74" IsEnabled="False"/>
        <TextBox HorizontalAlignment="Left" Height="26" Margin="99,235,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="116"/>



    </Grid>

</Window> 
