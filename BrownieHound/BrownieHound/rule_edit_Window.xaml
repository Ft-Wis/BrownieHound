<Window x:Class="BrownieHound.rule_edit_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BrownieHound"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="BrownieHound" Height="510" Width="405">
    <DockPanel Margin="1,1,1,20">
        <StackPanel DockPanel.Dock="Bottom" 
                    Orientation="Horizontal" HorizontalAlignment="Right">
        </StackPanel>

        <Grid Background="White" RenderTransformOrigin="0.485,0.542" HorizontalAlignment="Center" Width="400" Margin="0,0,0,-32" Cursor="">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8*"/>
                <ColumnDefinition Width="188*"/>
                <ColumnDefinition Width="63*"/>
                <ColumnDefinition Width="34*"/>
                <ColumnDefinition Width="13*"/>
                <ColumnDefinition Width="28*"/>
                <ColumnDefinition Width="66*"/>
                <ColumnDefinition Width="0*"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="title" Content="ルール編集画面" HorizontalAlignment="Left" Height="44" Margin="20,11,0,0" VerticalAlignment="Top" Width="238" FontSize="24" Grid.ColumnSpan="3" Grid.Column="1"/>
            <Button x:Name="edit" Content="編集"  HorizontalAlignment="Left" Height="43" Margin="18,0,0,20" VerticalAlignment="Bottom" Width="168" FontWeight="Bold" FontFamily="Yu Gothic" FontSize="25"  Foreground="White" Click="editButton_Click" IsDefault="True" Grid.ColumnSpan="5" Grid.Column="2"/>
            <Button x:Name="cancel" Content="キャンセル" HorizontalAlignment="Left" Height="43" Margin="4,0,0,20" VerticalAlignment="Bottom" Width="168"  FontWeight="Bold" FontFamily="Yu Gothic" FontSize="25" Background="White" Foreground="Orange" BorderBrush="Black" Click="cancelButton_Click" IsCancel="True" Grid.Column="1"/>
            <Border BorderBrush="#FFFF731D" BorderThickness="2" HorizontalAlignment="Left" Height="360" CornerRadius="10"   Margin="4,55,0,0" VerticalAlignment="Top" Width="379" Grid.ColumnSpan="6" Grid.Column="1">

            </Border>

            <TextBox x:Name="protocolTextBox" HorizontalAlignment="Left" Height="24" Margin="33,209,0,0" TextWrapping="Wrap" materialDesign:HintAssist.Hint="プロトコル名" IsEnabled="False" VerticalAlignment="Top"  Width="88" Grid.ColumnSpan="4" Grid.Column="3"/>

            <TextBlock HorizontalAlignment="Left" Margin="19,139,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Grid.Column="1"><Run Language="ja-jp" Text="送信元IPアドレス"/></TextBlock>
            <ComboBox x:Name="sourceComboBox"  HorizontalAlignment="Left" Margin="136,129,0,0" materialDesign:HintAssist.Hint="" VerticalAlignment="Top" Width="105" Grid.ColumnSpan="2" Grid.Column="1" SelectionChanged="sourceComboBox_SelectionChanged">
                <ComboBox.Resources>
                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                    </Style>
                </ComboBox.Resources>
                <ComboBoxItem Content="すべて" />
                <ComboBoxItem Content="このPCのアドレス" />
                <ComboBoxItem Content="手動で設定" />
            </ComboBox>
            <TextBox x:Name="sourceTextBox"  HorizontalAlignment="Left" Margin="3,127,0,0" TextWrapping="Wrap" materialDesign:HintAssist.Hint="XXX.XXX.AAA.BBB" Text="{Binding sourceIP.Value,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" FontSize="13" Width="120" IsEnabled="False" Grid.ColumnSpan="4" Grid.Column="3">

            </TextBox>
            <TextBlock x:Name="destinationTextBlock" HorizontalAlignment="Left" Margin="19,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Grid.Column="1"><Run Language="ja-jp" Text="送信先IPアドレス"/></TextBlock>
            <ComboBox x:Name="destinationComboBox"  HorizontalAlignment="Left" Margin="136,161,0,0" materialDesign:HintAssist.Hint="" VerticalAlignment="Top" Width="105" Grid.ColumnSpan="2" Grid.Column="1" SelectionChanged="destinationComboBox_SelectionChanged">
                <ComboBox.Resources>
                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                    </Style>
                </ComboBox.Resources>
                <ComboBoxItem Content="すべて" />
                <ComboBoxItem Content="このPCのアドレス" />
                <ComboBoxItem Content="ブロードキャスト" />
                <ComboBoxItem Content="手動で設定" />
            </ComboBox>

            <TextBox x:Name="destinationTextBox"  HorizontalAlignment="Left" Margin="3,159,0,0" TextWrapping="Wrap" Text="{Binding destinationIP.Value,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="XXX.AAA.BBB.CCC" VerticalAlignment="Top" FontSize="13" Width="120" IsEnabled="False" Grid.ColumnSpan="4" Grid.Column="3"/>
            <TextBlock HorizontalAlignment="Left" Height="16" Margin="24,217,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="52" Grid.Column="1"><Run Language="ja-jp" Text="プロトコル"/></TextBlock>

            <TextBlock HorizontalAlignment="Left" Height="16" Margin="24,270,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="66" Grid.Column="1"><Run Language="ja-jp" Text="ポート番号"/></TextBlock>
            <TextBlock HorizontalAlignment="Left" Height="16" Margin="24,313,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="67" Grid.Column="1"><Run Language="ja-jp" Text="パケットサイズ"/></TextBlock>
            <TextBlock HorizontalAlignment="Left" Height="16" Margin="24,358,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="67" Grid.Column="1"><Run Language="ja-jp" Text="間隔"/></TextBlock>
            <ComboBox x:Name="protocolComboBox"  HorizontalAlignment="Left" Margin="163,208,0,0" materialDesign:HintAssist.Hint="" VerticalAlignment="Top" Width="105" Grid.Column="1" SelectionChanged="protocolComboBox_SelectionChanged" Grid.ColumnSpan="3">
                <ComboBox.Resources>
                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                    </Style>
                </ComboBox.Resources>
                <ComboBoxItem Content="すべてのプロトコル" />
                <ComboBoxItem Content="TCP" />
                <ComboBoxItem Content="UDP" />
                <ComboBoxItem Content="手動で設定" />
            </ComboBox>
            <ComboBox x:Name="portnumberComboBox"  HorizontalAlignment="Left" Margin="163,262,0,0" materialDesign:HintAssist.Hint="" Width="106" Grid.Column="1" SelectionChanged="portnumberComboBox_SelectionChanged" Grid.ColumnSpan="3" VerticalAlignment="Top">
                <ComboBox.Resources>
                    <Style TargetType="{x:Type materialDesign:SmartHint}">
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                    </Style>
                </ComboBox.Resources>
                <ComboBoxItem Content="すべて" />
                <ComboBoxItem Content="HTTP(80)" />
                <ComboBoxItem Content="HTTPS(443)" />
                <ComboBoxItem Content="SNMP(162)" />
                <ComboBoxItem Content="DNS(53)" />
                <ComboBoxItem Content="手動で設定" />
            </ComboBox>
            <TextBox x:Name="portnumberTextBox" HorizontalAlignment="Left" Height="24" Margin="1,262,0,0" TextWrapping="Wrap" Text="{Binding portNum.Value,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="ポート番号" VerticalAlignment="Top" Width="86" IsEnabled="False" Grid.ColumnSpan="3" Grid.Column="4"/>
            <TextBox x:Name="sizeTextBox" HorizontalAlignment="Left" Height="26" Margin="91,305,0,0" TextWrapping="Wrap" Text="{Binding packetSize.Value,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="75" Grid.Column="1"/>
            <TextBlock x:Name="byteText" HorizontalAlignment="Left" Height="16" Margin="174,315,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="67" Grid.Column="1" Grid.ColumnSpan="2"><Run Language="ja-jp" Text="Bytes以上"/></TextBlock>
            <TextBox x:Name="secondsTextBox" InputScope="Number" TextAlignment="Right" HorizontalAlignment="Left" Height="26" Margin="91,348,0,0" TextWrapping="Wrap" Text="{Binding detectionMins.Value,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="75" Grid.Column="1"/>
            <TextBlock HorizontalAlignment="Left" Height="16" Margin="171,360,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="34" Grid.Column="1" Grid.ColumnSpan="2"><Run Language="ja-jp" Text="秒間に"/></TextBlock>
            <TextBox x:Name="timesTextBox" InputScope="Number" TextAlignment="Right" HorizontalAlignment="Left" Height="26" Margin="34,348,0,0" TextWrapping="Wrap" Text="{Binding detectionCnt.Value,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="50" Grid.Column="2" Grid.ColumnSpan="2"/>
            <TextBlock HorizontalAlignment="Left" Height="16" Margin="27,360,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="43" Grid.Column="3" Grid.ColumnSpan="3"><Run Language="ja-jp" Text="回以上"/></TextBlock>
            <RadioButton x:Name="destinationRadioButton" Content="送信先" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="-0.265,-0.598" Margin="84,277,0,0" IsChecked="False" Grid.Column="1"/>

            <RadioButton x:Name="sourceRadioButton" Grid.Column="1" Content="送信元" HorizontalAlignment="Left" Margin="84,258,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.265,-0.598" IsChecked="True"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="100" Margin="22,82,0,0" Grid.Column="1"><Run Language="ja-jp" Text="検知方式"/></TextBlock>
            <RadioButton x:Name="whiteListRadioButton" Content="否検出" GroupName="detectionMethod" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="-0.265,-0.598" Margin="133,102,0,0" IsChecked="False" Grid.Column="1" Grid.ColumnSpan="2"  Checked="whiteListRadioButton_Checked"/>
            <RadioButton x:Name="blackListRadioButton" Content="検出" GroupName="detectionMethod" HorizontalAlignment="Left" Margin="133,81,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.265,-0.598" IsChecked="True" Grid.Column="1" Grid.ColumnSpan="2" Checked="blackListRadioButton_Checked"/>
            <CheckBox x:Name="sizeNoneCheckBox" HorizontalAlignment="Left" VerticalAlignment="Top" Unchecked="sizeNoneCheckBox_Unchecked" Checked="sizeNoneCheckBox_Checked" Margin="52,314,0,0" IsEnabled="True" Grid.Column="2" Width="118" Grid.ColumnSpan="5">
                <CheckBox.Content>
                    <TextBlock Text="サイズを指定しない"></TextBlock>
                </CheckBox.Content>
            </CheckBox>

        </Grid>
    </DockPanel>
</Window>